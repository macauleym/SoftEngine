<Window 
    x:Class="SoftEngine.Display.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SoftEngine.Display"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800"
    Loaded="Page_Loaded">
    
    <Grid>
        <StackPanel>
            <TextBlock x:Name="fps"></TextBlock>
            <TextBox x:Name="desiredMesh"></TextBox>
            <Button Content="Apply Mesh" Click="Apply_Mesh_Click"></Button>
            <Image x:Name="frontBuffer" />
        </StackPanel>
    </Grid>
</Window>
